from pygame import *
back = (224, 255, 255)
window = display.set_mode((600,500))
display.set_caption('PING-PONG')
window.fill(back)

clock = time.Clock()
FPS = 60
mixer.init()
mixer.music.load('candyland.mp3')
mixer.music.play()

game = True

while game:
    for e in event.get():
        if e.type == QUIT:
            game = False

    display.update()
    clock.tick(60)
